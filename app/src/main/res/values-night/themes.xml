<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TaskBeats" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black_coffe</item>
        <item name="colorOnPrimary">@color/yellowSafety</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/gold</item>
        <item name="colorSecondaryVariant">@color/orange</item>
        <item name="colorOnSecondary">@color/yellowSafety</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/black_coffe</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Title" parent="Widget.AppCompat.TextView">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">22sp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/rubik_medium</item>
    </style>

    <style name="Desc" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">18dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/rubik_medium</item>
    </style>

    <style name="Hint" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">14dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/rubik_regular</item>
    </style>

    <style name="Button" parent="Widget.AppCompat.Button">
        <item name="fontFamily">@font/rubik_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/gold</item>
    </style>

    <style name="Toolbar" parent="Widget.AppCompat.TextView">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/rubik_semibold</item>

    </style>

</resources>